        transmission(
            max_clutch_torque: 1000 * units.lb_ft
        )
        .add_gear(4.027)
        .add_gear(2.364)
        .add_gear(1.522)
        .add_gear(1.152)
        .add_gear(0.852)
        .add_gear(0.667);
}

public node main {
    set_engine(chevrolet_l76())
    set_vehicle(pontiac_g8_gt_ve_vehicle())
