            duration_at_50_thou: 196 * units.deg,
            gamma: 1.0,
            lift: 467 * units.thou,
            steps: 100
        );
}

public node chevrolet_l76_lobe_profile_exh {
    alias output __out:
        harmonic_cam_lobe(
            duration_at_50_thou: 208 * units.deg,
