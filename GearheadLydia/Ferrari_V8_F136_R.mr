    alias output __out:
        transmission(
            max_clutch_torque: 700 * units.lb_ft
        )
        .add_gear(3.286)
        .add_gear(2.158)
        .add_gear(1.609)
        .add_gear(1.269)
        .add_gear(1.034)
        .add_gear(0.848);
}

public node main {
    set_engine(ferrari_f136_r_engine())
    set_vehicle(maserati_coupe_gt_vehicle())
    set_transmission(maserati_coupe_gt_transmission())
}

main()