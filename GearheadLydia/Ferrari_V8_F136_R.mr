    alias output __out:
        vehicle(
            mass: 1668 * units.kg,
            drag_coefficient: 0.36,
            cross_sectional_area: 1.97 * (units.m * units.m), // estimated
            diff_ratio: 3.7,
            tire_radius: 321.5 * units.mm, // 265/35ZR18
            rolling_resistance: 1668 * units.kg * 9.81 * (265.0/275.0) * 0.01
        );
}

